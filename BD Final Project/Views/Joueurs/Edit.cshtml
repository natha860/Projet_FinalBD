<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype ="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Joueurs.JoueurId" />
     
           
            <div class="form-group">
                <label asp-for="Joueurs.Nom" class="control-label"></label>
                <input asp-for="Joueurs.Nom" class="form-control" />
                <span asp-validation-for="Joueurs.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Joueurs.DateNaissance" class="control-label"></label>
                <input asp-for="Joueurs.DateNaissance" class="form-control" />
                <span asp-validation-for="Joueurs.DateNaissance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Joueurs.Position" class="control-label"></label>
                <input asp-for="Joueurs.Position" class="form-control" />
                <span asp-validation-for="Joueurs.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Joueurs.Nationalite" class="control-label"></label>
                <input asp-for="Joueurs.Nationalite" class="form-control" />
                <span asp-validation-for="Joueurs.Nationalite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Joueurs.EquipeId" class="control-label"></label>
                <select asp-for="Joueurs.EquipeId" class="form-control" asp-items="ViewBag.EquipeId"></select>
                <span asp-validation-for="Joueurs.EquipeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FormFile" > fichier image:</label>
                <input id="FormFile" name="FormFile" type="file" accept="image/*"  class="form-control-file" />
                <span asp-validation-for="FormFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nas" class="control-label"></label>
                <input asp-for="Nas" class="form-control" />
                <span asp-validation-for="Nas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

